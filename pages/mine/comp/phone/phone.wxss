@keyframes up{
  from{height: 0rpx;}
  to{height: 450rpx;}
}
.container{
  background-color: white;
  position: fixed;
  height: 450rpx;
  width: 750rpx;
  bottom: 0;
  left: 0;
  border-radius: 1.5%;
  animation-name: up;
  animation-duration: 0.5s;
}
.introimg{
  width: 55rpx;
  height: 55rpx;
  border-radius: 100%;
  position: absolute;
  left: 45rpx;
  top: 40rpx;
}
.introtxt{
  font-size: 32rpx;
  position: absolute;
  left: 130rpx;
  top: 45rpx;
}
.introtxt2{
  font-weight:bold;
  font-size: 35rpx;
  position: absolute;
  left: 50rpx;
  top: 120rpx;
}
.phonebtn{
  z-index: 2;
  position: absolute;
  padding: 0;
  font-weight:normal;
  background-color: transparent;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.034);
  border-top: 1rpx solid rgba(0, 0, 0, 0.034);
  height: 100rpx;
  top: 200rpx;
  left: 25rpx;
}
.phonetxt{
  font-size: 30rpx;
  position: relative;
  margin-right: 60rpx;
  top: 10rpx;
}
.phoneimg{
  width: 50rpx;
  height: 50rpx;
  position: relative;
  display: inline-block;
  top: 20rpx;
  margin-left: 120rpx;
}
.control_btn{
  position: absolute;
  height: 80rpx;
  top: 350rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
}
.transView{
  position: fixed;
  width: 750rpx;
  height: 100%;
  bottom: 0rpx;
  left: 0rpx;
  background: rgba(0, 0, 0, 0.253);
}