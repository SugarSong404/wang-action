@keyframes up{
  from{height: 0rpx;}
  to{height: 500rpx;}
}
.container{
  background-color: white;
  position: fixed;
  height: 460rpx;
  width: 750rpx;
  bottom: 0;
  left: 0;
  border-radius: 1.5%;
  animation-name: up;
  animation-duration: 0.5s;
}
.introimg{
  width: 55rpx;
  height: 55rpx;
  border-radius: 100%;
  position: absolute;
  left: 45rpx;
  top: 40rpx;
}
.introtxt{
  font-size: 32rpx;
  position: absolute;
  left: 130rpx;
  top: 45rpx;
}
.introtxt2{
  font-size: 37rpx;
  font-weight: bold;
  position: absolute;
  left: 50rpx;
  top: 120rpx;
}
.collector_view{
  position: absolute;
  padding: 0;
  font-weight:normal;
  background-color: transparent;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.034);
  border-top: 1rpx solid rgba(0, 0, 0, 0.034);
  height: 110rpx;
  width: 700rpx;
  top: 200rpx;
  left: 25rpx;
}
.avatar_btn{
  position: relative;
  display: inline-block;
  height: 90rpx;
  top: 10rpx;
  left: 20rpx;
  padding: 0;
}
.avatar_img{
  position: relative;
  height: 90rpx;
  width: 90rpx;
}
.nicktext{
  display: block;
  left: 130rpx;
  position: absolute;
  font-size: 35rpx;
}
.transView{
  position: fixed;
  width: 750rpx;
  height: 100%;
  bottom: 0rpx;
  left: 0rpx;
  background: rgba(0, 0, 0, 0.253);
}
.control_btn{
  position: absolute;
  height: 80rpx;
  top: 350rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
}